<Window x:Class="SchoolPayListSystem.App.SchoolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="School Management" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="60" Background="#008000">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <!-- Logo -->
                    <Canvas Width="50" Height="50" Background="Transparent" Margin="0,0,15,0">
                        <Ellipse Canvas.Left="2" Canvas.Top="2" Width="46" Height="46" Fill="White" Opacity="0.2"/>
                        <Ellipse Canvas.Left="5" Canvas.Top="5" Width="40" Height="40" Fill="White" Opacity="0.9"/>
                        <!-- Hand with Card Icon -->
                        <Rectangle Canvas.Left="12" Canvas.Top="10" Width="10" Height="8" 
                                   Fill="#008000" Stroke="#008000" StrokeThickness="0.5" RadiusX="1" RadiusY="1"/>
                        <Path Data="M 8 20 Q 6 14 8 8 L 10 8 Q 12 6 14 8 L 14 22 Q 14 27 10 28 Q 8 28 7 26 L 8 20" 
                              Fill="#008000" Opacity="0.9"/>
                        <TextBlock Canvas.Left="20" Canvas.Top="14" FontSize="10" FontWeight="Bold" Foreground="#008000" Text="S"/>
                    </Canvas>
                    <TextBlock Text="School/College Management" Foreground="White" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Entry Form -->
            <StackPanel DockPanel.Dock="Top" Margin="20" Background="#F9F9F9">
                <Grid Height="40" Margin="15,15,15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="School Code:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="SchoolCodeTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <Grid Height="40" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="School Name:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="SchoolNameTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <Grid Height="40" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="School Type:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox x:Name="SchoolTypeCombo" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <Grid Height="40" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Branch:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox x:Name="BranchCombo" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <Grid Height="40" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Bank Account No:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="AccountNumberTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="Save" Width="100" Height="40" Background="#00AA00" Foreground="White" Click="Save_Click" Margin="0,0,10,0"/>
                    <Button Content="Clear" Width="100" Height="40" Background="#FF9900" Foreground="White" Click="Clear_Click" Margin="0,0,10,0"/>
                    <Button Content="Import Excel" Width="120" Height="40" Background="#0066CC" Foreground="White" Click="ImportExcel_Click" Margin="0,0,10,0"/>
                    <Button Content="Download Template" Width="140" Height="40" Background="#6A5ACD" Foreground="White" Click="DownloadTemplate_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Records DataGrid -->
            <DataGrid x:Name="SchoolsDataGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" Margin="20,10,20,20" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding SchoolCode}" Width="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="School Name" Binding="{Binding SchoolName}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding SchoolType.TypeName}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Branch" Binding="{Binding Branch.BranchName}" Width="150" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Action" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" Width="60" Height="30" Background="#0066CC" Foreground="White" Click="Edit_Click" Margin="0,0,5,0"/>
                                    <Button Content="Delete" Width="60" Height="30" Background="#FF0000" Foreground="White" Click="Delete_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Status Bar -->
            <TextBlock DockPanel.Dock="Bottom" x:Name="StatusText" Text="Ready" Margin="20,10,20,10" Foreground="#666666"/>
        </DockPanel>
    </Grid>
</Window>
