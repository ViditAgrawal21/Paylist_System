<Window x:Class="SchoolPayListSystem.App.BranchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Branch Management" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="60" Background="#6A5ACD">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <!-- Logo -->
                    <Canvas Width="50" Height="50" Background="Transparent" Margin="0,0,15,0">
                        <Ellipse Canvas.Left="2" Canvas.Top="2" Width="46" Height="46" Fill="White" Opacity="0.2"/>
                        <Ellipse Canvas.Left="5" Canvas.Top="5" Width="40" Height="40" Fill="White" Opacity="0.9"/>
                        <!-- Hand with Card Icon -->
                        <Rectangle Canvas.Left="12" Canvas.Top="10" Width="10" Height="8" 
                                   Fill="#6A5ACD" Stroke="#6A5ACD" StrokeThickness="0.5" RadiusX="1" RadiusY="1"/>
                        <Path Data="M 8 20 Q 6 14 8 8 L 10 8 Q 12 6 14 8 L 14 22 Q 14 27 10 28 Q 8 28 7 26 L 8 20" 
                              Fill="#6A5ACD" Opacity="0.9"/>
                        <TextBlock Canvas.Left="20" Canvas.Top="14" FontSize="10" FontWeight="Bold" Foreground="#6A5ACD" Text="B"/>
                    </Canvas>
                    <TextBlock Text="Branch Management" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Form -->
            <Grid DockPanel.Dock="Top" Margin="20">
                <StackPanel>
                    <Grid Height="40" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Branch Code:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="BranchCodeTextBox" Grid.Column="1" Margin="10,0,0,0" Padding="10" Height="35"/>
                    </Grid>

                    <Grid Height="40" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Branch Name:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="BranchNameTextBox" Grid.Column="1" Margin="10,0,0,0" Padding="10" Height="35"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save" Width="80" Height="35" Background="#00AA00" Foreground="White" Click="Save_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Button Content="Clear" Width="80" Height="35" Background="#FF9900" Foreground="White" Click="Clear_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Button Content="Import Excel" Width="100" Height="35" Background="#0066CC" Foreground="White" Click="ImportExcel_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Button Content="Template" Width="80" Height="35" Background="#6A5ACD" Foreground="White" Click="DownloadTemplate_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBlock x:Name="MessageBlock" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- DataGrid -->
            <DataGrid x:Name="BranchesDataGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" Margin="20,0,20,20" Height="300" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding BranchCode}" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding BranchName}" Width="*"/>
                    <DataGridTemplateColumn Header="Action" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" Width="35" Height="25" Background="#0066CC" Foreground="White" Click="Edit_Click" Margin="0,0,5,0"/>
                                    <Button Content="Delete" Width="35" Height="25" Background="#FF0000" Foreground="White" Click="Delete_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
