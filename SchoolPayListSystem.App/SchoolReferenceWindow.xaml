<Window x:Class="SchoolPayListSystem.App.SchoolReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="School Reference - Help" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="White"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="60" Background="#003D7A">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="School Reference Guide" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Instructions -->
            <TextBlock DockPanel.Dock="Top" Text="Below is the list of all available schools. Use this as a reference when entering school codes in the payment list." 
                       Foreground="#666666" FontSize="11" TextWrapping="Wrap" Margin="15,10,15,10"/>

            <!-- Data Grid -->
            <DataGrid x:Name="SchoolsDataGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" 
                      Margin="15,10,15,10" Height="450"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      GridLinesVisibility="All"
                      BorderThickness="1"
                      BorderBrush="#CCCCCC">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="School Code" Binding="{Binding SchoolCode}" Width="120"/>
                    <DataGridTextColumn Header="School Name" Binding="{Binding SchoolName}" Width="*"/>
                    <DataGridTextColumn Header="School Type" Binding="{Binding SchoolType.TypeName}" Width="150"/>
                    <DataGridTextColumn Header="Branch Name" Binding="{Binding Branch.BranchName}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Close Button -->
            <Grid DockPanel.Dock="Bottom" Height="50" Margin="15,10,15,15">
                <Button Content="CLOSE" Height="40" Background="#0066CC" Foreground="White" FontSize="12" FontWeight="Bold" Click="Close_Click" Cursor="Hand" BorderThickness="0"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
