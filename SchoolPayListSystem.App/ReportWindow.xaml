<Window x:Class="SchoolPayListSystem.App.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Professional Bank Reports" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="60" Background="#9933CC">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="ðŸ“Š Professional Pay List Reports" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Filter Section -->
            <StackPanel DockPanel.Dock="Top" Margin="20" Background="#F9F9F9">
                <StackPanel Orientation="Horizontal" Margin="15,15,15,15">
                    <TextBlock x:Name="FilterLabel" Text="Select Filter" Width="150" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox x:Name="FilterCombo" Width="250" Padding="10" Margin="10,0,0,0"/>
                    <TextBlock Text="Report Date" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="30,0,0,0"/>
                    <DatePicker x:Name="ReportDatePicker" Width="150" Margin="10,0,0,0"/>
                    <Button Content="Generate Report" Width="140" Height="40" Background="#00AA00" Foreground="White" Click="GenerateReport_Click" Margin="20,0,0,0" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="15,0,15,15">
                    <CheckBox x:Name="IncludeAdviceNumberCheckBox" Content="Include Advice Number?" VerticalAlignment="Center" Margin="0,0,20,0" IsChecked="True" Visibility="Collapsed"/>
                    <Button Content="Print" Width="100" Height="40" Background="#0066CC" Foreground="White" Click="Print_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Button Content="Export PDF/HTML" Width="140" Height="40" Background="#FF6600" Foreground="White" Click="ExportPDF_Click" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>

            <!-- Report Data Grid -->
            <DataGrid x:Name="ReportDataGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" Margin="20,10,20,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Column 1" Binding="{Binding Col1}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Column 2" Binding="{Binding Col2}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Column 3" Binding="{Binding Col3}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Column 4" Binding="{Binding Col4}" Width="*" IsReadOnly="True" Foreground="#00AA00" FontWeight="Bold"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Summary Section -->
            <StackPanel DockPanel.Dock="Bottom" Margin="20" Background="#F0F0F0">
                <Grid Height="30" Margin="15">
                    <TextBlock Text="Total Records" Width="150" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="0" x:Name="TotalRecordsText" Margin="160,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <Grid Height="30" Margin="15,10,15,15">
                    <TextBlock Text="Total Amount" Width="150" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="â‚¹0.00" x:Name="TotalAmountText" Margin="160,0,0,0" VerticalAlignment="Center" Foreground="#00AA00" FontWeight="Bold" FontSize="14"/>
                </Grid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
