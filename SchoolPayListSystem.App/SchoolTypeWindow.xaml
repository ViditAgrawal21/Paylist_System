<Window x:Class="SchoolPayListSystem.App.SchoolTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="School Type Management" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="60" Background="#0066CC">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <!-- Logo -->
                    <Canvas Width="50" Height="50" Background="Transparent" Margin="0,0,15,0">
                        <Ellipse Canvas.Left="2" Canvas.Top="2" Width="46" Height="46" Fill="White" Opacity="0.2"/>
                        <Ellipse Canvas.Left="5" Canvas.Top="5" Width="40" Height="40" Fill="White" Opacity="0.9"/>
                        <!-- Hand with Card Icon -->
                        <Rectangle Canvas.Left="12" Canvas.Top="10" Width="10" Height="8" 
                                   Fill="#0066CC" Stroke="#0066CC" StrokeThickness="0.5" RadiusX="1" RadiusY="1"/>
                        <Path Data="M 8 20 Q 6 14 8 8 L 10 8 Q 12 6 14 8 L 14 22 Q 14 27 10 28 Q 8 28 7 26 L 8 20" 
                              Fill="#0066CC" Opacity="0.9"/>
                        <TextBlock Canvas.Left="20" Canvas.Top="14" FontSize="10" FontWeight="Bold" Foreground="#0066CC" Text="S"/>
                    </Canvas>
                    <TextBlock Text="School Type Management (Primary School, High School, Junior College, etc.)" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Entry Form -->
            <StackPanel DockPanel.Dock="Top" Margin="20" Background="#F9F9F9">
                <Grid Height="40" Margin="15,15,15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="School Type Code:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="TypeCodeTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <Grid Height="40" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="School Type Name:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="TypeNameTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Button x:Name="SaveButton" Content="Save" Width="100" Height="40" Background="#00AA00" Foreground="White" Click="Save_Click" Margin="0,0,10,0"/>
                    <Button Content="Clear" Width="100" Height="40" Background="#FF9900" Foreground="White" Click="Clear_Click" Margin="0,0,10,0"/>
                    <Button Content="Import Excel" Width="120" Height="40" Background="#0066CC" Foreground="White" Click="ImportExcel_Click" Margin="0,0,10,0"/>
                    <Button Content="Download Template" Width="140" Height="40" Background="#6A5ACD" Foreground="White" Click="DownloadTemplate_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Records DataGrid -->
            <DataGrid x:Name="TypesDataGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" Margin="20,10,20,20" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding TypeCode}" Width="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Type Name" Binding="{Binding TypeName}" Width="250" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Action" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" Width="60" Height="30" Background="#0066CC" Foreground="White" Click="Edit_Click" Tag="{Binding SchoolTypeId}" Margin="0,0,5,0"/>
                                    <Button Content="Delete" Width="60" Height="30" Background="#FF0000" Foreground="White" Click="Delete_Click" Tag="{Binding SchoolTypeId}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Status Bar -->
            <TextBlock DockPanel.Dock="Bottom" x:Name="StatusText" Text="Ready" Margin="20,10,20,10" Foreground="#666666"/>
        </DockPanel>
    </Grid>
</Window>
