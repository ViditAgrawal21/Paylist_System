<Window x:Class="SchoolPayListSystem.App.ImportExcelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Paylist Data from Excel" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="Import Paylist Data" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" TextAlignment="Center" Foreground="#333"/>

            <!-- File Selection -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Select Excel File:" FontWeight="Bold" Margin="0,0,0,8" Foreground="#555"/>
                <DockPanel>
                    <TextBlock Name="FilePathText" DockPanel.Dock="Left" Text="No file selected" Margin="0,5,0,0" Foreground="#666" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    <Button Name="BrowseButton" DockPanel.Dock="Right" Content="Browse" Width="80" Padding="8" Click="BrowseButton_Click" Background="#2196F3" Foreground="White" Cursor="Hand"/>
                </DockPanel>
            </StackPanel>

            <!-- Import Button -->
            <Button Name="ImportButton" Content="Import Data" Height="45" Padding="8" Click="ImportButton_Click" 
                   Background="#4CAF50" Foreground="White" FontSize="14" FontWeight="Bold" Cursor="Hand" Margin="0,0,0,20"/>

            <!-- Result Display -->
            <Border Name="ResultBorder" Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,0" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="✓ Import Successful" FontSize="14" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10"/>
                    <TextBlock Text="Data Imported:" FontWeight="Bold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBlock Name="ImportedCountText" Text="0 entries imported" Foreground="#666" Margin="20,0,0,0" FontSize="12"/>
                    <TextBlock Text="Date: " Foreground="#555" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Name="ImportDateText" Text="" Foreground="#666" Margin="20,0,0,0" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Error Display -->
            <Border Name="ErrorBorder" Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,0" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="✗ Import Failed" FontSize="14" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,10"/>
                    <TextBlock Name="ErrorMessageText" Text="" Foreground="#B71C1C" TextWrapping="Wrap" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button Name="CloseButton" Content="Close" Height="40" Padding="8" Click="CloseButton_Click" 
                   Background="#9E9E9E" Foreground="White" FontSize="12" Cursor="Hand" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
