<UserControl x:Class="SchoolPayListSystem.App.Controls.PasswordBoxWithToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="45" VerticalAlignment="Top">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>

        <!-- Hidden PasswordBox for secure storage -->
        <PasswordBox x:Name="PasswordBoxControl" 
                     Grid.Column="0"
                     Height="45" 
                     Padding="12,0" 
                     FontSize="13" 
                     Background="#F5F5F5" 
                     BorderThickness="1" 
                     BorderBrush="#CCCCCC"
                     VerticalContentAlignment="Center"
                     Visibility="Visible"/>

        <!-- TextBox for showing password when toggled -->
        <TextBox x:Name="PasswordTextBox" 
                 Grid.Column="0"
                 Height="45" 
                 Padding="12,0" 
                 FontSize="13" 
                 Background="#F5F5F5" 
                 BorderThickness="1" 
                 BorderBrush="#CCCCCC"
                 VerticalContentAlignment="Center"
                 Visibility="Collapsed"
                 TextChanged="PasswordTextBox_TextChanged"/>

        <!-- Eye Toggle Button -->
        <Button Grid.Column="1" 
                x:Name="ToggleButton"
                Background="Transparent" 
                BorderThickness="0"
                Cursor="Hand"
                Click="ToggleButton_Click"
                Padding="0">
            <TextBlock x:Name="EyeIcon" 
                       Text="ðŸ‘ï¸" 
                       FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
