<Window x:Class="SchoolPayListSystem.App.SalaryEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Salary Entry" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="60" Background="#FF9900">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <!-- Logo -->
                    <Canvas Width="50" Height="50" Background="Transparent" Margin="0,0,15,0">
                        <Ellipse Canvas.Left="2" Canvas.Top="2" Width="46" Height="46" Fill="White" Opacity="0.2"/>
                        <Ellipse Canvas.Left="5" Canvas.Top="5" Width="40" Height="40" Fill="White" Opacity="0.9"/>
                        <!-- Hand with Card Icon -->
                        <Rectangle Canvas.Left="12" Canvas.Top="10" Width="10" Height="8" 
                                   Fill="#FF9900" Stroke="#FF9900" StrokeThickness="0.5" RadiusX="1" RadiusY="1"/>
                        <Path Data="M 8 20 Q 6 14 8 8 L 10 8 Q 12 6 14 8 L 14 22 Q 14 27 10 28 Q 8 28 7 26 L 8 20" 
                              Fill="#FF9900" Opacity="0.9"/>
                        <TextBlock Canvas.Left="20" Canvas.Top="16" FontSize="8" FontWeight="Bold" Foreground="#FF9900" Text="₹"/>
                    </Canvas>
                    <TextBlock Text="Monthly Salary/Pay List Entry" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Main Scrollable Content -->
            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Background="#F9F9F9">
                    <!-- Entry Form -->
                    <Grid Height="40" Margin="15,15,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Operator:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock x:Name="OperatorNameDisplay" Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center" Foreground="#0066CC" FontWeight="Bold" Text="Not logged in"/>
                    </Grid>

                    <Grid Height="40" Margin="15,15,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Date:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <DatePicker x:Name="EntryDatePicker" Grid.Column="1" Margin="15,0,0,0" Height="35"/>
                    </Grid>

                    <Grid Height="40" Margin="15,15,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="School Code:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="SchoolCodeTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35" TextChanged="SchoolCode_TextChanged"/>
                    </Grid>

                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="" VerticalAlignment="Center" FontWeight="Bold"/>
                        <ListBox x:Name="SchoolCodeSuggestions" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="100" Visibility="Collapsed" SelectionChanged="SchoolSuggestion_Selected"/>
                    </Grid>

                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="School Name:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="SchoolNameTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35" IsReadOnly="True" Background="#F0F0F0"/>
                    </Grid>

                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Account No:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="AccountNoTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35" IsReadOnly="True" Background="#F0F0F0" MaxLength="15" PreviewTextInput="AccountNo_PreviewTextInput"/>
                    </Grid>

                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="School Type:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="SchoolTypeTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35" IsReadOnly="True" Background="#F0F0F0"/>
                    </Grid>

                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Branch Name:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="BranchNameTextBox" Grid.Column="1" Margin="15,0,0,0" Padding="10" Height="35" IsReadOnly="True" Background="#F0F0F0"/>
                    </Grid>

                    <!-- Amount 1 -->
                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Amount 1:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="Amount1TextBox" Grid.Column="1" Margin="15,0,10,0" Padding="10" Height="35" TextChanged="Amount_Changed"/>
                        <TextBlock Text="₹0.00" x:Name="Amount1Display" Grid.Column="2" TextAlignment="Right" VerticalAlignment="Center" Foreground="#0066CC" FontWeight="Bold" Margin="0,0,10,0"/>
                    </Grid>

                    <!-- Amount 2 -->
                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Amount 2:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="Amount2TextBox" Grid.Column="1" Margin="15,0,10,0" Padding="10" Height="35" TextChanged="Amount_Changed"/>
                        <TextBlock Text="₹0.00" x:Name="Amount2Display" Grid.Column="2" TextAlignment="Right" VerticalAlignment="Center" Foreground="#0066CC" FontWeight="Bold" Margin="0,0,10,0"/>
                    </Grid>

                    <!-- Amount 3 -->
                    <Grid Height="40" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Amount 3:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBox x:Name="Amount3TextBox" Grid.Column="1" Margin="15,0,10,0" Padding="10" Height="35" TextChanged="Amount_Changed"/>
                        <TextBlock Text="₹0.00" x:Name="Amount3Display" Grid.Column="2" TextAlignment="Right" VerticalAlignment="Center" Foreground="#0066CC" FontWeight="Bold" Margin="0,0,10,0"/>
                    </Grid>

                    <Grid Height="40" Margin="0,10,0,0" Background="#E8E8E8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total Amount:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="₹0.00" x:Name="TotalAmountDisplay" Grid.Column="1" Margin="15,0,10,0" TextAlignment="Right" VerticalAlignment="Center" FontSize="16" Foreground="#00AA00" FontWeight="Bold"/>
                    </Grid>

                    <!-- Buttons Section with Wrapping -->
                    <WrapPanel Orientation="Horizontal" Margin="0,15,0,20">
                        <Button Content="Add New" Width="100" Height="40" Background="#00AA00" Foreground="White" Click="AddNew_Click" Margin="0,0,10,10" FontWeight="Bold" Cursor="Hand"/>
                        <Button x:Name="EditButton" Content="Edit" Width="100" Height="40" Background="#FF9900" Foreground="White" Click="Edit_Click" Margin="0,0,10,10" IsEnabled="False" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="Import" Width="100" Height="40" Background="#0099CC" Foreground="White" Click="Import_Click" Margin="0,0,10,10" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="Previous" Width="100" Height="40" Background="#0066CC" Foreground="White" Click="Previous_Click" Margin="0,0,10,10" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="Next" Width="100" Height="40" Background="#0066CC" Foreground="White" Click="Next_Click" Margin="0,0,10,10" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="Delete" Width="100" Height="40" Background="#FF0000" Foreground="White" Click="Delete_Click" Margin="0,0,10,10" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="Help" Width="100" Height="40" Background="#9C27B0" Foreground="White" Click="Help_Click" Margin="0,0,10,10" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="Exit" Width="100" Height="40" Background="#FF9900" Foreground="White" Click="Exit_Click" Margin="0,0,0,10" FontWeight="Bold" Cursor="Hand"/>
                    </WrapPanel>

                    <!-- Records Section -->
                    <Separator Height="2" Background="#CCCCCC" Margin="0,10,0,10"/>

                    <!-- Fresh Entries Section -->
                    <TextBlock Text="Fresh Entries (Full Details)" Margin="0,10,0,5" FontSize="13" FontWeight="Bold" Background="#E8F4F8" Padding="10"/>
                    <DataGrid x:Name="FreshEntriesDataGrid" AutoGenerateColumns="False" Margin="0,0,0,15" Height="180" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding INDATE, StringFormat=dd/MM/yyyy}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="School Code" Binding="{Binding SchoolCode}" Width="85" IsReadOnly="True"/>
                            <DataGridTextColumn Header="School Name" Binding="{Binding SchoolName}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Account" Binding="{Binding BankAccount}" Width="110" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding SchoolTypeCode}" Width="70" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Branch" Binding="{Binding Branch}" Width="85" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Amt 1" Binding="{Binding AMOUNT1, StringFormat=N2}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Amt 2" Binding="{Binding AMOUNT2, StringFormat=N2}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Amt 3" Binding="{Binding AMOUNT3, StringFormat=N2}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Operator" Binding="{Binding OperatorName}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Stamp Date" Binding="{Binding STAMPDATE, StringFormat=dd/MM/yyyy}" Width="90" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Stamp Time" Binding="{Binding STAMPTIME}" Width="80" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Imported Entries Section - Hidden from UI -->
                    <!-- Data is imported and stored in database but not displayed -->
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
