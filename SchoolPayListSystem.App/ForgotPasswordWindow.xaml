<Window x:Class="SchoolPayListSystem.App.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SchoolPayListSystem.App.Controls"
        Title="Reset Password - School Pay List System" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid>
        <!-- Gradient Header Background -->
        <Rectangle Fill="#003D7A" Height="150" VerticalAlignment="Top"/>
        
        <!-- Header Content -->
        <StackPanel VerticalAlignment="Top" Margin="0,30,0,0" HorizontalAlignment="Center">
            <TextBlock Text="SCHOOL PAY LIST SYSTEM" 
                       Foreground="White" 
                       FontSize="26" 
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Reset Your Password" 
                       Foreground="#B0D4FF" 
                       FontSize="14"
                       TextAlignment="Center"
                       Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Reset Card with ScrollViewer -->
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="380" Background="White" 
                BorderThickness="1" BorderBrush="#DDDDDD"
                CornerRadius="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0">
                <StackPanel Margin="40">
                    <!-- Instructions -->
                    <TextBlock Text="Enter your username and set a new password" 
                               FontSize="12" Foreground="#666666" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,25"/>

                    <!-- Username Section -->
                    <TextBlock Text="Username" FontSize="12" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox" Height="45" Padding="12,0" FontSize="13" 
                             Margin="0,0,0,20" 
                             Background="#F5F5F5" 
                             BorderThickness="1" 
                             BorderBrush="#CCCCCC"
                             VerticalContentAlignment="Center"/>

                    <!-- New Password Section with Eye Toggle -->
                    <TextBlock Text="New Password" FontSize="12" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,8"/>
                    <local:PasswordBoxWithToggle x:Name="NewPasswordControl" Margin="0,0,0,20"/>

                    <!-- Confirm Password Section with Eye Toggle -->
                    <TextBlock Text="Confirm Password" FontSize="12" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,8"/>
                    <local:PasswordBoxWithToggle x:Name="ConfirmPasswordControl" Margin="0,0,0,25"/>

                    <!-- Message Block -->
                    <TextBlock x:Name="MessageBlock" Text="" Foreground="#CC0000" FontSize="11" TextWrapping="Wrap" 
                              Margin="0,0,0,20" MinHeight="25" FontWeight="SemiBold"/>

                    <!-- Reset Button -->
                    <Button x:Name="ResetButton"
                            Content="RESET PASSWORD" 
                            Height="50" 
                            Background="#0066CC" 
                            Foreground="White" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Click="ResetButton_Click" 
                            Margin="0,0,0,12"
                            Cursor="Hand"
                            BorderThickness="0"/>
                    
                    <!-- Cancel Button -->
                    <Button Content="CANCEL" 
                            Height="50" 
                            Background="#CC0000" 
                            Foreground="White" 
                            FontSize="14"
                            FontWeight="Bold"
                            Click="Cancel_Click"
                            Cursor="Hand"
                            BorderThickness="0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <TextBlock Text="Â© 2025 Shree Computer Services - All Rights Reserved" 
                   Foreground="#999999" 
                   FontSize="10"
                   TextAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,15"/>
    </Grid>
</Window>
