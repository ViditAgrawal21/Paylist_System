<Window x:Class="SchoolPayListSystem.App.CleanDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clean Database" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        FontFamily="Arial"
        ShowInTaskbar="False">
    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FF3333" Height="60" Padding="20,0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="⚠ Clean Database" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,3"/>
                <TextBlock Text="Reset the entire database - This action cannot be undone" 
                           FontSize="11" 
                           Foreground="#FFE6E6"
                           Margin="0,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid DockPanel.Dock="Top" Margin="30,30,30,30">
            <StackPanel>
                <!-- Step 1: Password Entry -->
                <Border Name="PasswordBorder" BorderThickness="1" BorderBrush="#DDDDDD" Background="White" Padding="20" Margin="0,0,0,25" CornerRadius="6">
                    <StackPanel>
                        <TextBlock Text="Step 1: Enter Admin Password" 
                                   FontSize="13" 
                                   FontWeight="Bold" 
                                   Foreground="#003D7A"
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="To proceed with database cleanup, please enter the admin password:" 
                                   FontSize="11" 
                                   Foreground="#666666"
                                   Margin="0,0,0,15"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Password:" 
                                   FontSize="11" 
                                   Foreground="#333333"
                                   Margin="0,0,0,8"
                                   FontWeight="Bold"/>
                        
                        <PasswordBox Name="PasswordBox" 
                                     Height="38" 
                                     Padding="12,8" 
                                     FontSize="11"
                                     Background="White"
                                     BorderThickness="1"
                                     BorderBrush="#CCCCCC"
                                     Margin="0,0,0,15"/>
                        
                        <Button Content="Validate Password" 
                                Height="38" 
                                Click="ValidatePassword_Click"
                                FontSize="11"
                                FontWeight="Bold"
                                Background="#0066CC"
                                Foreground="White"
                                HorizontalAlignment="Left"
                                Width="150"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>

                <!-- Step 2: Confirmation & Warning -->
                <Border Name="ConfirmationBorder" 
                        BorderThickness="1" 
                        BorderBrush="#DDDDDD" 
                        Background="White" 
                        Padding="20" 
                        Margin="0,0,0,25" 
                        CornerRadius="6"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Step 2: Confirm Database Reset" 
                                   FontSize="13" 
                                   FontWeight="Bold" 
                                   Foreground="#FF9900"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Warning Box -->
                        <Border BorderThickness="2" BorderBrush="#FF9900" Background="#FFFACD" Padding="15" Margin="0,0,0,20" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="⚠ WARNING - CRITICAL ACTION" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="#FF6600"
                                           Margin="0,0,0,10"/>
                                
                                <TextBlock Text="• All data will be permanently deleted from the database" 
                                           FontSize="11" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Text="• This includes all branches, schools, salary entries, and reports" 
                                           FontSize="11" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Text="• The entire database will be reset to fresh state" 
                                           FontSize="11" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Text="• This action CANNOT be undone unless you have a backup" 
                                           FontSize="11" 
                                           FontWeight="Bold"
                                           Foreground="#FF0000"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Confirmation Items -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Please confirm the following to proceed:" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0,0,0,12"/>
                            
                            <CheckBox Name="Confirm1" 
                                      Margin="0,0,0,10"
                                      FontSize="11"
                                      Foreground="#333333">
                                <TextBlock Text="I understand all data will be deleted" TextWrapping="Wrap"/>
                            </CheckBox>
                            
                            <CheckBox Name="Confirm2" 
                                      Margin="0,0,0,10"
                                      FontSize="11"
                                      Foreground="#333333">
                                <TextBlock Text="I have backed up important data (if needed)" TextWrapping="Wrap"/>
                            </CheckBox>
                            
                            <CheckBox Name="Confirm3" 
                                      Margin="0,0,0,0"
                                      FontSize="11"
                                      Foreground="#FF0000"
                                      FontWeight="Bold">
                                <TextBlock Text="Yes, I want to proceed with database reset" TextWrapping="Wrap"/>
                            </CheckBox>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <WrapPanel HorizontalAlignment="Right" Margin="0,0,0,0">
                            <Button Content="Cancel" 
                                    Height="38" 
                                    Width="120" 
                                    Margin="0,0,10,0"
                                    Click="Cancel_Click"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Background="#CCCCCC"
                                    Foreground="#333333"
                                    Cursor="Hand"/>
                            
                            <Button Name="DeleteButton"
                                    Content="DELETE DATABASE" 
                                    Height="38" 
                                    Width="150"
                                    Click="DeleteDatabase_Click"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Background="#FF3333"
                                    Foreground="White"
                                    Cursor="Hand"
                                    IsEnabled="False"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <TextBlock Name="StatusMessage" 
                           FontSize="11" 
                           Foreground="#666666"
                           Margin="0,0,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border DockPanel.Dock="Bottom" Background="#F0F0F0" BorderThickness="0,1,0,0" BorderBrush="#CCCCCC" Padding="20,15">
            <TextBlock Text="If you need assistance, contact: 7972339953" 
                       FontSize="10" 
                       Foreground="#666666"
                       TextAlignment="Center"/>
        </Border>
    </DockPanel>
</Window>
